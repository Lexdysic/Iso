<?xml version="1.0" ?>
<Entities xmlns="http://www.w3schools.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="entity.xsd">
  <Entity name="Bullet">
    <Component type="Transform" />
    <Component type="RigidBody">
      <Mass>10</Mass>
    </Component>
    <Component type="Collider">
      <Shape type="Circle">
        <Position>0,0</Position>
        <Radius>4</Radius>
      </Shape>
    </Component>
    <Component type="Graphics">
      <Image type="Circle">
        <Position>0,0</Position>
        <Radius>4</Radius>
      </Image>
    </Component>
  </Entity>

  <Entity name="TankBody">
    <Component type="Transform">
      <Posiiton>100,400</Posiiton>
    </Component>
    <Component type="TankControl" />
    <Component type="Graphics">
      <Image type="Rectangle">
        <Position>0,0</Position>
        <Size>40,20</Size>
      </Image>
    </Component>
  </Entity>

  <Entity name="TankGun">
    <Component type="Transform">
      <Position>0,-5</Position>
    </Component>
    <Component type="GunControl" />
    <Component type="Graphics">
      <Image type="Rectangle">
        <Position>20,0</Position>
        <Size>40,10</Size>
      </Image>
    </Component>
  </Entity>
</Entities>